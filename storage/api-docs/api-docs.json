{
    "openapi": "3.0.0",
    "info": {
        "title": "您的 API 標題",
        "description": "這是 API 的簡介",
        "contact": {
            "name": "API 支援團隊",
            "url": "http://www.example.com/support",
            "email": "support@example.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000/api",
            "description": "主要服務器"
        }
    ],
    "paths": {
        "/api/v1/posts": {
            "get": {
                "tags": [
                    "Posts"
                ],
                "summary": "展示所有文章",
                "operationId": "74f5938736730f550751f0d7c8816511",
                "responses": {
                    "200": {
                        "description": "操作成功",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "status": {
                                            "type": "integer",
                                            "example": 201
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "取得所有文章成功"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Post"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Posts"
                ],
                "summary": "發布文章",
                "operationId": "eeb9e53edc2cef8017d6ecf1685f7dcd",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "title",
                                    "content"
                                ],
                                "properties": {
                                    "title": {
                                        "type": "string",
                                        "example": "範例標題"
                                    },
                                    "content": {
                                        "type": "string",
                                        "example": "這是文章內容"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "文章發布成功",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Post"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "請求參數錯誤"
                    },
                    "500": {
                        "description": "伺服器錯誤，請稍後再試"
                    }
                },
                "security": [
                    {
                        "apiAuth": []
                    }
                ]
            }
        },
        "/api/v1/posts/{post_id}": {
            "get": {
                "tags": [
                    "Posts"
                ],
                "summary": "取得單一文章內容",
                "operationId": "1fd227ff9461d5e7d55f3a2ef1bc8b34",
                "parameters": [
                    {
                        "name": "post_id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "操作成功",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Post"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "文章未找到"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Post": {
                "title": "Post",
                "required": [
                    "title",
                    "content"
                ],
                "properties": {
                    "id": {
                        "description": "Post ID",
                        "type": "integer",
                        "format": "int64"
                    },
                    "title": {
                        "description": "Post title",
                        "type": "string"
                    },
                    "content": {
                        "description": "Post content",
                        "type": "string"
                    },
                    "user_id": {
                        "description": "User ID",
                        "type": "integer"
                    }
                },
                "type": "object"
            }
        }
    }
}